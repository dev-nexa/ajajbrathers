<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">تعديل المستخدم</h4>
            </div>
            <div class="card-body">
                <form action="/users/<%= editUser.id %>/edit" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">اسم المستخدم</label>
                        <input type="text" class="form-control" id="username" name="username" 
                               value="<%= editUser.username %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">الصلاحية</label>
                        <select class="form-select" id="role_id" name="role_id" required>
                            <option value="3" <%= editUser.role_id === 3 ? 'selected' : '' %>>مستعرض</option>
                            <option value="2" <%= editUser.role_id === 2 ? 'selected' : '' %>>محرر</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/users" class="btn btn-secondary">إلغاء</a>
                        <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 